{
  "name": "pce-memory",
  "version": "0.8.1",
  "private": false,
  "type": "module",
  "description": "PCE Memory - MCP server for Process-Context Engine",
  "license": "MIT",
  "author": "CAPHTECH",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CAPHTECH/pce-memory.git",
    "directory": "apps/pce-memory"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "ai",
    "memory",
    "context",
    "embeddings",
    "duckdb"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "bin": {
    "pce-memory": "dist/client/proxy.js",
    "pce-daemon": "dist/daemon/daemon.js",
    "pce-memory-stdio": "dist/index.js"
  },
  "scripts": {
    "dev": "node --import tsx --watch src/index.ts",
    "build": "tsdown --entry src/index.ts --entry src/daemon/daemon.ts --entry src/client/proxy.ts --format esm --dts --clean",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist *.tsbuildinfo",
    "assay:evaluate": "tsx scripts/assay/run-evaluation.ts"
  },
  "dependencies": {
    "@duckdb/node-api": "1.4.1-r.5",
    "@huggingface/transformers": "^3.8.1",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "fp-ts": "^2.16.11",
    "io-ts": "^2.2.22",
    "sharp": "^0.34.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@pce/boundary": "workspace:*",
    "@pce/embeddings": "workspace:*",
    "@pce/policy-schemas": "workspace:*",
    "p-limit": "^5.0.0",
    "tsdown": "^0.14.0",
    "tsx": "^4.19.2",
    "yaml": "^2.5.1"
  },
  "engines": {
    "node": ">=22.18.0"
  }
}
